<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Survey Creator</masterLabel>
    <description>Component to create and manage surveys.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__UtilityBar</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage, lightning__RecordPage, lightning__HomePage, lightningCommunity__Default">
            <property name="primaryColor" type="String" default="#22BDC1" label="Primary Color" description="Primary color for theme styling."/>
            <property name="accentColor" type="String" default="#D5DF23" label="Accent Color" description="Accent color for highlights."/>
            <property name="textColor" type="String" default="#1d1d1f" label="Text Color" description="Default text color."/>
            <property name="backgroundColor" type="String" default="#ffffff" label="Background Color" description="Component background color."/>
            <property name="publicSiteUrl" type="String" default="https://your-site.my.salesforce.com" label="Public Site URL" description="The base URL of the public site/page hosting the survey responder LWC (starting with http/https). Required to send surveys." required="true"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>