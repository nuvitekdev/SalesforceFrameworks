<design:component label="Nuvitek Custom Theme Layout">
    <!-- ========================================= -->
    <!-- 🎨 THEME & APPEARANCE SETTINGS -->
    <!-- ========================================= -->
    
    <design:attribute name="primaryColor" label="🎨 Primary Color" description="Primary theme color for buttons and highlights.&#10;&#10;📌 EXAMPLES:&#10;• #22BDC1 (teal)&#10;• rgb(34, 189, 193)&#10;• blue, green, red" default="#22BDC1"/>
    <design:attribute name="accentColor" label="✨ Accent Color" description="Secondary color for gradients and decorations.&#10;&#10;📌 EXAMPLES:&#10;• #D5DF23 (lime)&#10;• rgb(213, 223, 35)&#10;• yellow, orange" default="#D5DF23"/>
    <design:attribute name="textColor" label="📝 Text Color" description="Main text color throughout the site.&#10;&#10;📌 EXAMPLES:&#10;• #1d1d1f (dark text)&#10;• #ffffff (white text)&#10;• #666666 (gray text)" default="#1d1d1f"/>
    <design:attribute name="themeName" label="🌓 Theme Mode" description="Choose light or dark theme.&#10;&#10;🎯 OPTIONS:&#10;• light = Light background with dark text&#10;• dark = Dark background with light text" default="light"/>
    <design:attribute name="applyThemeToSlots" label="🎯 Apply Theme to Slots" description="Apply theme styling to components in slots" default="false"/>
    <design:attribute name="globalThemeOverride" label="🌐 Global Theme Override" description="Apply theme globally to all Salesforce components" default="false"/>
    
    <!-- ========================================= -->
    <!-- 🔝 HEADER & NAVIGATION CONFIGURATION -->
    <!-- ========================================= -->
    
    <!-- Header Main Settings -->
    <design:attribute name="useDefaultHeader" label="📍 Use Default Header" description="Enable to use the built-in header design" default="false"/>
    <design:attribute name="headerVariant" label="🎭 Header Style" description="Choose header appearance.&#10;&#10;🎯 OPTIONS:&#10;• standard = Normal header&#10;• transparent = See-through header&#10;• minimal = Simple, clean header" default="standard"/>
    <design:attribute name="headerSticky" label="📌 Sticky Header" description="Keep header fixed at top when scrolling" default="false"/>
    <design:attribute name="headerContainerWidth" label="📐 Header Width %" description="Header width as percentage.&#10;&#10;📌 EXAMPLES:&#10;• 100 = Full width&#10;• 80 = Centered with margins&#10;• 90 = Slightly narrower" default="100"/>
    
    <!-- Logo Settings -->
    <design:attribute name="logoUrl" label="🏢 Logo Image URL" description="URL to your logo image.&#10;&#10;📌 EXAMPLES:&#10;• /resource/CompanyLogo (static resource)&#10;• https://example.com/logo.png (external)&#10;• /sfsites/c/resource/Logo (community resource)"/>
    <design:attribute name="logoAltText" label="🏷️ Logo Alt Text" description="Accessibility text for logo.&#10;&#10;📌 EXAMPLES:&#10;• 'USDA Logo'&#10;• 'Company Home'&#10;• 'Nuvitek'" default="Nuvitek"/>
    
    <!-- Navigation Menu Settings -->
    <design:attribute name="headerNavigationMenuName" label="🗂️ Header Navigation Menu" description="Name of navigation menu from Setup.&#10;&#10;📝 SETUP:&#10;1. Go to Setup > Navigation Menus&#10;2. Create menu (e.g., 'Main Navigation')&#10;3. Enter exact name here&#10;&#10;📌 EXAMPLES:&#10;• 'Main Navigation'&#10;• 'Header Menu'&#10;• 'Primary Nav'"/>
    <design:attribute name="ensureHomeNavItem" label="🏠 Auto-Add Home Link" description="Automatically add Home as first navigation item" default="false"/>
    
    <!-- Search & Profile -->
    <design:attribute name="showSearchInHeader" label="🔍 Show Search Box" description="Display search functionality in header" default="false"/>
    <design:attribute name="searchObjects" label="🔎 Searchable Objects" description="Salesforce objects to search.&#10;&#10;📌 FORMAT: Comma-separated list&#10;&#10;📌 EXAMPLES:&#10;• Account,Contact&#10;• Account,Contact,Case,Lead&#10;• Account,Contact,Opportunity" default="Account,Contact"/>
    <design:attribute name="showProfileIcon" label="👤 Show Profile Icon" description="Display user profile icon in header" default="false"/>
    <design:attribute name="profilePageUrl" label="👤 Profile Page URL" description="Link to user profile.&#10;&#10;📌 EXAMPLES:&#10;• /profile&#10;• /s/profile&#10;• /myaccount" default="/profile"/>
    
    <!-- ========================================= -->
    <!-- 🌟 HERO SECTION CONFIGURATION -->
    <!-- ========================================= -->
    
    <!-- Hero Main Settings -->
    <design:attribute name="showHeroSection" label="🎯 Show Hero Section" description="Display hero banner at top of page" default="true"/>
    <design:attribute name="heroLayout" label="📐 Hero Layout Style" description="Choose hero section layout.&#10;&#10;🎯 OPTIONS:&#10;• fullwidth = Centered content, full height&#10;• split = Two columns (content + media)&#10;• banner = Compact header (120-150px)" default="fullwidth"/>
    <design:attribute name="heroBackgroundImage" label="🖼️ Hero Background Image" description="Background image URL.&#10;&#10;📌 EXAMPLES:&#10;• /resource/HeroImage (static resource)&#10;• https://example.com/hero.jpg (external)"/>
    <design:attribute name="heroBackgroundDarkness" label="🌑 Background Overlay" description="Overlay darkness (0-100).&#10;&#10;📌 VALUES:&#10;• 0 = No overlay (bright)&#10;• 30 = Light overlay&#10;• 70 = Dark overlay&#10;• 100 = Black overlay" default="30"/>
    
    <!-- Hero Content -->
    <design:attribute name="heroTitle" label="📝 Hero Title" description="Main headline text" default="Experience the Future Today"/>
    <design:attribute name="heroSubtitle" label="📄 Hero Subtitle" description="Supporting text under title" default="Discover innovative solutions designed with you in mind"/>
    
    <!-- Hero CTAs -->
    <design:attribute name="heroCTAPrimaryLabel" label="🔵 Primary Button Text" description="Main call-to-action button label" default="Get Started"/>
    <design:attribute name="heroCTAPrimaryUrl" label="🔗 Primary Button URL" description="Where primary button goes.&#10;&#10;📌 EXAMPLES:&#10;• /register&#10;• /contact-us&#10;• https://signup.com"/>
    <design:attribute name="heroCTASecondaryLabel" label="⚪ Secondary Button Text" description="Secondary button label" default="Learn More"/>
    <design:attribute name="heroCTASecondaryUrl" label="🔗 Secondary Button URL" description="Where secondary button goes.&#10;&#10;📌 EXAMPLES:&#10;• /about&#10;• /documentation&#10;• /learn-more"/>
    
    <!-- Banner Customization -->
    <design:attribute name="bannerTextSize" label="📏 Banner Text Size" description="Text size for banner layout.&#10;&#10;📌 EXAMPLES:&#10;• 24px (small)&#10;• 40px (medium)&#10;• 56px (large)" default="40px"/>
    <design:attribute name="bannerTextAlign" label="↔️ Banner Text Alignment" description="Text alignment for banner.&#10;&#10;🎯 OPTIONS:&#10;• left = Left aligned&#10;• center = Center aligned&#10;• right = Right aligned" default="center"/>
    
    <!-- Hero Media (Split Layout) -->
    <design:attribute name="heroMediaImage" label="🖼️ Hero Side Image" description="Image for split layout right side.&#10;&#10;📝 SETUP:&#10;1. Upload image as static resource&#10;2. Enter resource name here&#10;&#10;📌 EXAMPLE: 'HeroSideImage'"/>
    <design:attribute name="heroMediaImageAlt" label="🏷️ Hero Image Alt Text" description="Accessibility text for hero image" default="Hero Image"/>
    
    <!-- Video Background -->
    <design:attribute name="showBackgroundVideo" label="🎬 Enable Video Background" description="Use video instead of image in hero" default="false"/>
    <design:attribute name="backgroundVideoUrl" label="📹 Background Video URL" description="Video file URL.&#10;&#10;📌 EXAMPLES:&#10;• /resource/BackgroundVideo.mp4&#10;• https://example.com/video.mp4"/>
    <design:attribute name="backgroundVideoFallbackUrl" label="🖼️ Video Fallback Image" description="Image shown if video fails.&#10;&#10;📌 EXAMPLES:&#10;• /resource/VideoFallback.jpg&#10;• https://example.com/fallback.jpg"/>
    <design:attribute name="backgroundVideoDarkness" label="🌑 Video Overlay Darkness" description="Video darkness (0-100).&#10;&#10;📌 VALUES:&#10;• 0 = No overlay&#10;• 35 = Medium darkness&#10;• 100 = Black" default="35"/>
    
    <!-- ========================================= -->
    <!-- 📋 FOOTER CONFIGURATION -->
    <!-- ========================================= -->
    
    <!-- Footer Main Settings -->
    <design:attribute name="useDefaultFooter" label="📍 Use Default Footer" description="Enable to use built-in footer design" default="false"/>
    <design:attribute name="footerStyle" label="🎭 Footer Style" description="Footer layout style.&#10;&#10;🎯 OPTIONS:&#10;• minimal = Simple footer&#10;• standard = Normal footer&#10;• multi-column = Multiple sections" default="standard"/>
    
    <!-- Footer Navigation -->
    <design:attribute name="footerNavigationMenuName" label="🗂️ Footer Navigation Menu" description="Footer menu from Setup.&#10;&#10;📝 SETUP:&#10;1. Go to Setup > Navigation Menus&#10;2. Create menu (e.g., 'Footer Links')&#10;3. Enter exact name here"/>
    
    <!-- Company Info -->
    <design:attribute name="companyName" label="🏢 Company Name" description="Company name for copyright" default="Nuvitek"/>
    <design:attribute name="footerTagline" label="💬 Footer Tagline" description="Short company tagline" default="Delivering innovative solutions since 2012"/>
    <design:attribute name="footerLegalText" label="⚖️ Legal Text" description="Copyright and legal text" default="All rights reserved. Terms and conditions apply."/>
    
    <!-- Footer Columns -->
    <design:attribute name="footerColumnCount" label="🔢 Number of Columns" description="Footer column count (1-4)" default="3"/>
    <design:attribute name="footerColumnTitles" label="📝 Column Headers" description="Column titles, comma-separated.&#10;&#10;📌 EXAMPLE:&#10;'Products, Resources, Company'" default="Products, Resources, Company"/>
    <design:attribute name="footerColumnMenus" label="🗂️ Column Menu Names" description="Menu names from Setup, comma-separated.&#10;&#10;📌 EXAMPLE:&#10;'Products Menu, Resources Menu, Company Menu'"/>
    
    <!-- Social Links -->
    <design:attribute name="socialLinksCount" label="🔢 Number of Social Links" description="How many social media links (0-10)" default="0"/>
    <design:attribute name="socialLinkTitles" label="📱 Social Platform Names" description="Platform names, comma-separated.&#10;&#10;📌 EXAMPLE:&#10;'Facebook, Twitter, LinkedIn, Instagram'" default="Facebook, Twitter, LinkedIn, Instagram"/>
    <design:attribute name="socialLinkUrls" label="🔗 Social Profile URLs" description="Full URLs, comma-separated.&#10;&#10;📌 EXAMPLE:&#10;'https://facebook.com/company, https://twitter.com/company'"/>
    
    <!-- ========================================= -->
    <!-- FLOATING ACTION BUTTON (FAB) CONFIGURATION -->
    <!-- ========================================= -->
    
    <!-- FAB Main Settings -->
    <design:attribute name="showFab" label="🔘 Enable Floating Action Button (FAB)" description="Display a floating action button in the bottom-right corner.&#10;&#10;✅ WHAT IT DOES:&#10;• Shows a circular button that floats above content&#10;• Opens a popup menu with quick access links&#10;• Perfect for government sites (USDA.gov, help desks, etc.)&#10;&#10;📍 APPEARS: Bottom-right corner of the screen&#10;🎯 USE CASES: Help links, external agency sites, contact info" default="false"/>
    
    <design:attribute name="fabOptions" label="⚙️ FAB Button Mode" description="Choose what the FAB button displays when clicked.&#10;&#10;🎯 OPTIONS:&#10;• custom = Shows your custom links in a popup menu (recommended)&#10;• url_link = Direct link (no popup, goes straight to URL)&#10;• help_form = Shows ONLY the help request form (commented out - uncomment if needed)&#10;• ai_assistant = Shows ONLY the AI assistant (commented out - uncomment if needed)&#10;• both = Shows ALL options (commented out - uncomment if needed)&#10;&#10;💡 TIP: Use 'custom' for government/agency links with multiple options" default="custom"/>
    
    <!-- Custom Links Configuration -->
    <design:attribute name="fabCustomItems" label="📋 Custom Menu Items (Links)" description="Configure your custom links for the FAB menu.&#10;&#10;📝 FORMAT:&#10;Label,URL,Type|Label2,URL2,Type2&#10;&#10;🔧 COMPONENTS:&#10;• Label = Display text (e.g., 'USDA.gov', 'Help Desk')&#10;• URL = Destination link&#10;• Type = Icon type (link, email, chat, open)&#10;&#10;📌 EXAMPLES:&#10;&#10;1️⃣ SIMPLE (2 LINKS):&#10;USDA.gov,https://usda.gov,link|Help Desk,mailto:help@usda.gov,email&#10;&#10;2️⃣ WITH EMAIL SUBJECT:&#10;USDA.gov,https://usda.gov,link|Help Desk,mailto:SM.FN.WISPHelp@usda.gov?subject=WISP Support Request,email&#10;&#10;3️⃣ FULL EXAMPLE WITH EMAIL TEMPLATE:&#10;USDA.gov,https://www.usda.gov/,link|Help Desk,mailto:SM.FN.WISPHelp@usda.gov?subject=WISP Application Support&amp;body=Hello Team,%0D%0AI need help with:%0D%0A,email&#10;&#10;🌐 URL TYPES:&#10;• https://site.com = Opens in new tab&#10;• /internal-page = Navigates within site&#10;• mailto:email@gov = Opens email client&#10;• tel:+1234567890 = Opens phone dialer&#10;&#10;⚠️ IMPORTANT: Only items you define will appear (no empty spaces)" default=""/>
    
    <!-- Single URL Mode (url_link) -->
    <design:attribute name="fabUrl" label="🔗 Single FAB URL (Direct Link Mode)" description="Direct URL when using 'url_link' mode - FAB goes straight to this URL.&#10;&#10;📌 EXAMPLES:&#10;• /help = Internal help page&#10;• https://usda.gov = External site (new tab)&#10;• mailto:support@usda.gov = Email link&#10;• tel:+1-800-123-4567 = Phone number&#10;&#10;⚠️ NOTE: Only works when FAB Button Mode = 'url_link'" default=""/>
    
    <!-- Help Form Settings -->
    <design:attribute name="helpFormLabel" label="💬 Help Form - Label Text" description="Text shown for the help form option.&#10;&#10;📌 EXAMPLES:&#10;• 'Help Request'&#10;• 'Submit a Ticket'&#10;• 'Contact Support'&#10;• 'Get Help'&#10;&#10;⚠️ ONLY SHOWS: When FAB Mode = 'help_form' or 'both'" default="Help Request"/>
    
    <design:attribute name="helpFormIcon" label="💬 Help Form - Icon" description="Lightning icon for help form button.&#10;&#10;📝 FORMAT: category:iconName&#10;&#10;📌 COMMON OPTIONS:&#10;• utility:chat (speech bubble)&#10;• utility:help (question mark)&#10;• utility:case (briefcase)&#10;• standard:case (case icon)&#10;• standard:service_request&#10;&#10;🔍 Find more: developer.salesforce.com/docs/icons" default="utility:chat"/>
    
    <!-- AI Assistant Settings -->
    <design:attribute name="aiAssistantLabel" label="🤖 AI Assistant - Label Text" description="Text shown for the AI assistant option.&#10;&#10;📌 EXAMPLES:&#10;• 'AI Assistant'&#10;• 'Virtual Assistant'&#10;• 'Chat with AI'&#10;• 'Get AI Help'&#10;&#10;⚠️ ONLY SHOWS: When FAB Mode = 'ai_assistant' or 'both'" default="AI Assistant"/>
    
    <design:attribute name="aiAssistantIcon" label="🤖 AI Assistant - Icon" description="Lightning icon for AI assistant button.&#10;&#10;📝 FORMAT: category:iconName&#10;&#10;📌 COMMON OPTIONS:&#10;• utility:einstein (Einstein icon)&#10;• utility:bot (robot icon)&#10;• standard:bot (bot icon)&#10;• utility:sentiment_positive&#10;&#10;🔍 Find more: developer.salesforce.com/docs/icons" default="utility:einstein"/>
    
    <!-- ========================================= -->
    <!-- ⚙️ ADVANCED SETTINGS -->
    <!-- ========================================= -->
    
    <design:attribute name="showFaqSection" label="❓ Show FAQ Section" description="Display FAQ section in help form" default="false"/>
    <design:attribute name="heroMediaComponentName" label="🔧 Hero Media Component (Advanced)" description="LWC component for split hero.&#10;&#10;📝 FORMAT:&#10;• c:componentName (custom)&#10;• lightning:component (standard)"/>
    <design:attribute name="heroMediaComponentAttributes" label="⚙️ Hero Component Attributes" description="JSON attributes for hero component.&#10;&#10;📌 EXAMPLE:&#10;{'recordId': '{!recordId}', 'showTitle': true}"/>
    <design:attribute name="test" label="🔬 Test Identifier" description="Component identifier (leave empty)" default=""/>
    
    <design:supportedFormFactors>
        <design:supportedFormFactor type="Large"/>
        <design:supportedFormFactor type="Small"/>
    </design:supportedFormFactors>
</design:component>