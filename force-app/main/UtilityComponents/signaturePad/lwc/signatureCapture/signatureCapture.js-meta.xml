        default="draw"
        datasource="draw,text"
      />
            <property
        name="canvasHeight"
        type="Integer"
        label="Canvas Height"
        description="Height of the signature canvas in pixels"
        default="200"
        min="100"
        max="500"
      />
            <property
        name="signatureFont"
        type="String"
        label="Text Signature Font"
        description="Font family for text signatures"
        default="SignatureFont"
      />
            <property
        name="primaryColor"
        type="String"
        label="Primary Color"
        description="Primary theme color (headers, buttons)"
        default="#22BDC1"
      />
            <property
