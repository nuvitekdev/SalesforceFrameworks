        default="12px"
      />
            <property
        name="showPreview"
        type="Boolean"
        label="Show Preview"
        description="Show signature preview after saving"
        default="true"
      />
            <property
        name="allowClear"
        type="Boolean"
        label="Allow Clear"
        description="Show the clear button"
        default="true"
      />
            <property
        name="savedSignatureUrl"
        type="String"
        label="Saved Signature URL"
        description="URL of the saved signature (output)"
      />
