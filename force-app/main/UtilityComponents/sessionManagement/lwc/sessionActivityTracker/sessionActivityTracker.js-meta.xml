<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Session Activity Tracker</masterLabel>
    <description
  >Tracks user activity and updates session timeout in the background</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__UtilityBar</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__UtilityBar">
            <property
        name="hideComponent"
        type="Boolean"
        label="Hide Component"
        default="true"
        description="Hide the component in utility bar"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
