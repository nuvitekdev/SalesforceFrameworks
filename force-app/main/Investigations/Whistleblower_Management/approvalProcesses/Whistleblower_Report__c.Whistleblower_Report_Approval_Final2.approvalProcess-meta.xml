<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Status__c</field>
        <field>Fits_Within_Office_Priorities__c</field>
        <field>Within_Office_Jurisdiction__c</field>
        <field>Status_Reason__c</field>
        <field>Anonymous_Id__c</field>
        <field>Category__c</field>
        <field>CreatedBy</field>
        <field>Has_Access__c</field>
        <field>Has_Required_User_Data__c</field>
        <field>Initial_Response__c</field>
        <field>LastModifiedBy</field>
        <field>Privacy_Temrs_Acknowledgement__c</field>
        <field>Report_Details__c</field>
        <field>Reported_Date__c</field>
        <field>Reporter__c</field>
        <field>Reporter_Email__c</field>
        <field>Reporter_Employer__c</field>
        <field>Employment_Status__c</field>
        <field>Reporter_Name__c</field>
        <field>Reporter_Phone__c</field>
        <field>Severity__c</field>
        <field>Terms_Acknowledgement__c</field>
        <field>Visibility_Desired__c</field>
        <field>Anonymous__c</field>
        <field>Communication_Preference__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Check_Office_Priority</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Jurisdiction_Boolean</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Initial_Review</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Check to see if report falls under the correct jurisdiction</description>
        <label>Check Office Jurisdiction &amp; Priority</label>
        <name>Check_Office_Jurisdiction</name>
        <rejectionActions>
            <action>
                <name>Close_Report</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Closing_Reason_Not_In_Jurisdiction</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Email_Inform_user_of_denied_report_and_reasoning_Not_in_office_jurisdiction</name>
                <type>Alert</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Whistleblower_Report__c.Status__c</field>
            <operation>equals</operation>
            <value>Initial Review</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Add_to_Investigation_Queue</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_Response_via_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Status_To_Under_Investigation</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Whistleblower Report Evaluation</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
